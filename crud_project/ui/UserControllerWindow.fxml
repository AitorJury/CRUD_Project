<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" styleClass="root-pane" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="crud_project.ui.UserController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TableView fx:id="fxTableView" prefHeight="500.0" prefWidth="800.0" styleClass="table-view" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="fxTcId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="fxTcFirstName" prefWidth="100.0" text="First Name" />
                <TableColumn fx:id="fxTcLastName" prefWidth="100.0" text="Last Name" />
                <TableColumn fx:id="fxTcMidName" prefWidth="70.0" text="M. Name" />
                <TableColumn fx:id="fxTcEmail" prefWidth="120.0" text="Email" />
                <TableColumn fx:id="fxTcPassword" prefWidth="100.0" text="Password" />
                <TableColumn fx:id="fxTcPhone" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="fxTcStreet" prefWidth="100.0" text="Street" />
                <TableColumn fx:id="fxTcCity" prefWidth="80.0" text="City" />
                <TableColumn fx:id="fxTcState" prefWidth="60.0" text="State" />
                <TableColumn fx:id="fxTcZip" prefWidth="60.0" text="Zip" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" prefHeight="571.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="150.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
                    <image>
                        <Image url="@logo_Cynthor_SF.png" />
                    </image>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </ImageView>

                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="fxBtnNewCustomer" defaultButton="true" prefHeight="40.0" prefWidth="160.0" styleClass="button-primary" text="+ Add Customer" />
                        <Button fx:id="fxBtnDelete" prefHeight="40.0" prefWidth="160.0" styleClass="button-delete" text="- Delete Selected" />
                        <Button fx:id="fxBtnExit" prefHeight="40.0" prefWidth="160.0" styleClass="button-secondary" text="Exit" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>
